    </bean>

    <bean name="dataSyncAction" class="com.centit.sys.action.DataSyncAction" scope="request">
        <property name="dataSyncManager" ref="dataSyncManager"/>
        <property name="codeRepositoryManager" ref="codeRepositoryManager"/>
